{
    "include": ["./src/*.ts"],
    "compilerOptions": {
        "outDir": "./dist",
        "sourceMap": false,
        "declaration": true,
        "module": "commonjs",
        "target": "es6",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "types": ["node"],
        "typeRoots": ["node_modules/@types"],
        "lib": ["es2015", "es2016", "dom"]
    }
}
